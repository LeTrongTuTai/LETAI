@model Model.EF.PRODUCT
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (Model.EF.PRODUCT)ViewBag.Category;
    var relatedproduct = (List<Model.EF.PRODUCT>)ViewBag.RelatedProduct;
}
<main class="wrapper main-content" role="main">

    <!-- /snippets/breadcrumb.liquid -->

    <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
        <img src='../../hstatic.net/033/1000104033/1000147703/bg-breadcrumb8f26.jpg?v=55' alt='' />
        <div class="inner">
            <div class="breadcrumb-list">
                <a href="/" title="Quay lại trang chủ">Trang chủ</a>
                <span aria-hidden="true">/</span>


                <a href="/san-pham/@category.Metatitle-@category.ID+".html"" title="">@category.Name</a>


                <span aria-hidden="true">/</span>
                <span>@Model.Name</span>

            </div>
            <h3 class="page_name">Sản phẩm</h3>

        </div>
    </nav>

    <!-- /templates/product.liquid -->


    <div itemscope itemtype="http://schema.org/Product">

        <meta itemprop="url" content="http://basic.myharavan.com/products/ao-so-mi-nam">
        <meta itemprop="image" content="//hstatic.net/033/1000104033/1/2016/8-2/product_09_grande.jpg">

        <div class="grid product-single">
            <div class="grid__item large--one-half text-center">

                <div class="grid">
                    <div class="product-single__photos grid__item large--four-fifths medium--four-fifths right" id="ProductPhoto">

                        <a href="@category.Image" class="cloud-zoom" title="Áo sơ mi nam" data-rel="useWrapper: false, showTitle: false, zoomWidth:'auto', zoomHeight:'auto', adjustY:0, adjustX:10">
                            <img src="@category.Image" alt="" id="ProductPhotoImg">
                        </a>
                    </div>
                    <div class="left grid__item large--one-fifth medium--one-fifth">
                        <div class="lite-carousel-play special-collection">
                            <a class="prev carousel-md" href="#">
                                <span class="fa fa-angle-up"></span>
                            </a>
                            <div data-carousel="lite" data-visible="4">
                                <ul class="product-single__thumbnails" id="ProductThumbs">


                                    <li class="product__thumbnails">
                                        <a href="@Model.Image" class="product-single__thumbnail thumb-link" data-rel="@Model.Image">
                                            <img src="@Model.Image" alt="">
                                        </a>
                                    </li>

                                    <li class="product__thumbnails">
                                        <a href="@Model.MoreImages" class="product-single__thumbnail thumb-link" data-rel="@Model.MoreImages">
                                            <img src="@Model.MoreImages" alt="">
                                        </a>
                                    </li>


                                </ul>
                            </div>
                            <a class="next carousel-md" href="#">
                                <span class="fa fa-angle-down"></span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="grid__item large--one-half">

                <h1 class="single-title" itemprop="name">@Model.Name</h1>
                <span class="haravan-product-reviews-badge" data-id="1002812302"></span> <!-- end rating -->



                <p class="des-short">
                    Ngày nay, nhiều hãng giày khi bán hàng cho khách thường đựng giày trong một chiếc hộp rất đẹp, có kèm cả túi chống ẩm. Khi mua hàng về, bạn đừng vứt hộp đi. Chẳng...
                </p> <!-- end short des -->

                <span class="visually-hidden">Giá ban đầu</span>
                <span id="ProductPrice" class="h2" itemprop="price">
                   @(Model.Price.HasValue ? Model.Price.Value.ToString("N0") + " VNĐ" : "")
                </span>

                <!-- end price -->
                <hr>

                <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                    <meta itemprop="priceCurrency" content="VND">

                    <link itemprop="availability" href="http://schema.org/InStock"></


                    <form action="http://basic.myharavan.com/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" class="form-vertical">


                        <select name="id" id="productSelect" class="product-single__variants">

                            <option selected="selected" data-sku="" value="1007972408">@(Model.Price.HasValue ? Model.Price.Value.ToString("N0") + " VNĐ":"")</option>

                        </select>
                        <label for="Quantity" class="quantity-selector">Số lượng</label>
                        <input type="number" id="Quantity" name="quantity" value="1" min="1" class="quantity-selector">

                        <button type="submit" name="add" id="AddToCart" class="btn btn--secondary">
                            <i class="lnr lnr-cart "></i>
                            <span id="AddToCartText"><a href="/them-gio-hang?productId=@Model.ID&quantity=1">Thêm vào giỏ</a></span>
                        </button>


                        <a class="btn wishlist  awe-button product-quick-whistlist" href="../account/login.html" data-toggle="tooltip" title="Yêu thích">
                            <i class="fa fa-heart"></i>
                            Yêu thích
                        </a>
                    </form>

                </div>
                <div class="add-this">
                    <div class="addthis_toolbox addthis_default_style">
                        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                        <a class="addthis_button_tweet"></a>
                        <a class="addthis_counter addthis_pill_style"></a>
                    </div>
                    <script type='text/javascript'>
var addthis_product = 'sfy-2.0.2';
var addthis_plugin_info = {"info_status":"enabled","cms_name":"Haravan","cms_version":null,"plugin_name":"AddThis Sharing Tool","plugin_version":"2.0.2","plugin_mode":"AddThis"};
var addthis_config     = {/*AddThisHaravan_config_begins*/pubid:'xa-525fbbd6215b4f1a', button_style:'style2', services_compact:'', ui_delay:0, ui_click:false, ui_language:'', data_track_clickback:true, data_ga_tracker:'', custom_services:'', custom_services_size:true/*AddThisHaravan_config_ends*/};
                    </script>
                    <script type='text/javascript' src='../../s7.addthis.com/js/300/addthis_widget.js#pubid=xa-525fbbd6215b4f1a'></script>
                </div>




            </div>
        </div>

        <div class="product-tabs">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs tab-v7" role="tablist">
                <li role="presentation" class="active"><a href="#product-detail" aria-controls="home" role="tab" data-toggle="tab">Miêu tả</a></li>


                <li role="presentation">
                    <a href="#product-shipping" data-toggle="tab">Chính sách vận chuyển</a>
                </li>


                <li role="presentation"><a href="#product-reviews" aria-controls="product-reviews" role="tab" data-toggle="tab">Xem lại </a>
                </li>

            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="product-detail">
                    <div class="product-description rte" itemprop="description">
                        <p>@Model.Description</p>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="product-shipping">
                    <div class="rte">
                        @Html.Raw(Model.Detail)
                    </div>
                </div>



                <div role="tabpanel" class="tab-pane" id="product-reviews">

                    <div id="haravan-product-reviews" data-id="1002812302"></div>
                </div>
            </div>
        </div>

        <section class="related-products">
            <h2 class="title">Sản phẩm liên quan</h2>
            <div class="owl-carousel-play">
                <div class="products related-carousel owl-carousel owl-theme" data-items="4" data-pagination="false" data-navigation="true" data-autoPlay="false">
                    @foreach (var item in relatedproduct)
                    {
                        var url = "/chi-tiet/" + item.Metatitle + "-" + item.ID;
                        <div class="product-container" data-publish-date="">
                            <div class="product-image ">
                                <div class="product-thumbnail">
                                    <a href="@url" title="">
                                        <img class="product-featured-image" src="@item.Image" alt="">
                                        <img class="back-img" src="@item.MoreImages" alt="">
                                    </a>
                                </div><!-- /.product-thumbnail -->
                            </div><!-- /.product-image -->
                            <div class="product-meta">
                                <h4 class="product-name">
                                    <a href="@url" title="@item.Name">@item.Name</a>
                                </h4><!-- /.product-product -->
                                <div class="product-price">
                                    <span class="amout">
                                        <span>@(item.Price.HasValue ? item.Price.Value.ToString("N0") + " VNĐ":"Liên hệ")</span>
                                    </span>
                                </div><!-- /.product-price -->
                                <span class="haravan-product-reviews-badge" data-id="1002812665"></span> <!-- end rating -->
                            </div><!-- /.product-meta -->
                            <div class="product-actions">
                                <form method="post" action="http://basic.myharavan.com/cart/add" class="add-to-cart">
                                    <input type="hidden" name="id" value="1007972930" />
                                    <!-- <input type="submit" value="Buy now" class="btn" /> -->
                                    <button type="submit" name="add" class="btn">
                                        <span class="lnr lnr-cart "></span>
                                        <a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ</a>
                                    </button>
                                </form>
                                <div class="add-links">

                                    <a class="btn wishlist  awe-button product-quick-whistlist" href="../account/login.html" data-toggle="tooltip" title="Yêu thích">
                                        <i class="fa fa-heart"></i>
                                        Yêu thích
                                    </a>
                                    <a href="@url" class="btn product-quick-view btn-detail" title="Chi tiết">
                                        <i class="fa fa-expand" aria-hidden="true"></i>
                                        Chi tiết
                                    </a>
                                </div>

                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </section>

    </div>


    <script src="/hstatic.net/0/0/global/option_selection.js" type='text/javascript'></script>
    <script>
  var selectCallback = function(variant, selector) {
    if (variant) {
      if (variant.available) {
        // Selected a valid variant that is available.
        $('#AddToCart').removeClass('disabled').removeAttr('disabled').val('Add to Cart').fadeTo(200,1);
      } else {
        // Variant is sold out.
        $('#AddToCart').val('Sold Out').addClass('disabled').attr('disabled', 'disabled').fadeTo(200,0.5);
      }
      // Whether the variant is in stock or not, we can update the price and compare at price.
      if ( variant.compare_at_price > variant.price ) {
        $('#ProductPrice').html('<span class="product-price on-sale">'+ Haravan.formatMoney(variant.price, "") +'</span>'+'&nbsp;<s class="product-compare-price">'+Haravan.formatMoney(variant.compare_at_price, "")+ '</s>');
      } else {
        $('#ProductPrice').html('<span class="product-price">'+ Haravan.formatMoney(variant.price, "") + '</span>' );
      }
    } else {
      // variant doesn't exist.
      $('#AddToCart').val('Unavailable').addClass('disabled').attr('disabled', 'disabled').fadeTo(200,0.5);
    }
  }
