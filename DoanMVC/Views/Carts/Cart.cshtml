@model List<DoanMVC.Models.CartItem>

@{
    decimal thanhtien = 0;
    int soluong = 0;
    foreach (var item in Model)
    {
        var tongtien = (item.Product.PromotionPrice.HasValue) ? (item.Product.PromotionPrice.Value * @item.Quantity) : (item.Product.Price * @item.Quantity);
        thanhtien += decimal.Parse(tongtien.ToString());
        soluong += item.Quantity;
    }
}


@if (Model.Count == 0)
{
    <div class="cart_n">
        <i class="lnr lnr-cart "></i>
        Giỏ hàng:
    </div>
    <span id="CartCount">0 Sản phẩm</span>
    <span id="CartCost">0₫</span>
}
else
{
    <div class="cart_n">
        <i class="lnr lnr-cart "></i>
        Giỏ hàng:
    </div>
    <span id="CartCount">@Model.Count Sản phẩm</span>
    <span id="CartCost">@thanhtien₫</span>
}

