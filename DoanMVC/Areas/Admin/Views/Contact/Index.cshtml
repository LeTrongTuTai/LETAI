@model Model.EF.CONTACT
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}


@section header{
    Liên hệ
}
@section jsFooter{

    <script src="/Content/admin/js/controller/contactController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Liên hệ
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Tên
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="row_@Model.ID">
                                <td>@Model.Content</td>
                                <td><a href="#" class="btn-active" data-id="@Model.ID">@Html.Raw(Model.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                <td>
                                    <a href="/Admin/Contact/Edit/@Model.ID">Sửa</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>


